%post
    apt-get update && apt-get install -y --no-install-recommends curl wget ca-certificates

# Run the installer then remove it
%post
    cd /
    mkdir -p /opt/uv
    cd /opt/uv
    wget https://astral.sh/uv/install.sh
    chmod +x install.sh
    UV_INSTALL_DIR="/opt/uv" INSTALLER_NO_MODIFY_PATH=1 ./install.sh
%environment
    export PATH=/opt/uv:$PATH
%post
    export PATH=/opt/uv:$PATH
%post
    mkdir -p /app

%files
    README.md /app/README.md
    uv.lock /app/uv.lock
    pyproject.toml /app/pyproject.toml
    src /app/src
    LICENSES /app/LICENSES

%post
    cd /app
    uv venv --no-managed-python .venv 
%environment
    export PATH="/app/.venv/bin:$PATH"
    export UV_PROJECT_ENVIRONMENT=/app/.venv
    export VIRTUAL_ENV=/app/.venv
    export UV_LINK_MODE=copy
    
%post
    export PATH="/app/.venv/bin:$PATH"
    UV_PROJECT_ENVIRONMENT=/app/.venv uv sync
    python3 -m cupyx.tools.install_library --cuda 12.x --library cutensor --prefix "/app/.venv/.cupy/cuda_lib"
    python3 -m cupyx.tools.install_library --cuda 12.x --library nccl     --prefix "/app/.venv/.cupy/cuda_lib"
    python3 -m cupyx.tools.install_library --cuda 12.x --library cudnn    --prefix "/app/.venv/.cupy/cuda_lib"
    uv pip install -e .

%environment
    export UV_PROJECT_ENVIRONMENT=/app/.venv
    export VIRTUAL_ENV=/app/.venv
    export UV_LINK_MODE=copy

